
#Python 3

print ("Welcome to this PygLatin Word Translator")
pyg = ('ay')

original = input('Enter a word: ')

if len(original) > 0 and original.isalpha():
    word = original.lower()
    first = word[0]
    new_word = word + first + pyg
    print(new_word[1:len(new_word)])

else:
    print ('empty')
